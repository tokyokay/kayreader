<h1>Listing sites</h1>

<table>
  <tr>
    <th>Site name</th>
    <th>Category</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.site_name %></td>
    <td><%= site.categories[0].name %></td>
    <td><%= site.url %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

