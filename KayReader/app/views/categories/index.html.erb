#coding: utf-8
<%= image_tag("images/logo.jpeg",:id => 'logo_img')%>
<table>
<% @categories.each do |category| %>
  <tr>
    <td>
    	<B><%= category.name %></B>&emsp;
    	<%= link_to 'E', edit_category_path(category) %>
    	<%= link_to 'D', category, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <tr>
  	<td>
  		<ul type="circle">
  		<% @sites.each do |site| %>
  			<% if site.categories[0].respond_to?('name') && site.categories[0].name == category.name %>
  			<li>
  				<%= link_to 'E', edit_site_path(site) %>
  				<%= link_to 'D', site, method: :delete, data: { cofirm: 'Are you sure?' }%>
  				<%= link_to site.site_name, site_details_path(site), { :target => 'detailsFrame' } %>
  			</li>
  			<% end %>
  		<% end %>
  		</ul>
  	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path %>
