<p style="color: Red"><%= @error %></p>
<%= form_tag :action => 'auth' do %>
  <div class="field">
  	<label>UserName:<br />
  	<%= text_field_tag(:username, '',  { :size => 20 }) %></label>
  </div>
  <div class="field">
  	<label>Password:<br />
  	<%= password_field_tag(:password, '', { :size => 20 }) %></label>
  </div>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'LOGIN' %>
<% end %>
